<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<property name="logging.mikelue.level" value="info" />

	<logger name="guru.mikelue.misc" level="${logging.mikelue.level}" />

	<root level="warn">
		<appender-ref ref="STDOUT"/>
	</root>
</configuration>
